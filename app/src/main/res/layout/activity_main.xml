<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/randomB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/roll1"
        app:layout_constraintEnd_toEndOf="@+id/iView1"
        app:layout_constraintStart_toStartOf="@+id/iView1"
        app:layout_constraintTop_toBottomOf="@+id/iView1" />

    <Button
        android:id="@+id/randomB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/roll2"
        app:layout_constraintEnd_toEndOf="@+id/iView2"
        app:layout_constraintStart_toStartOf="@+id/iView2"
        app:layout_constraintTop_toBottomOf="@+id/iView2" />

    <Button
        android:id="@+id/randomAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/roll3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomB2" />

    <ImageView
        android:id="@+id/iView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomAll"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/iView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/randomAll"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/dice_2" />

</androidx.constraintlayout.widget.ConstraintLayout>